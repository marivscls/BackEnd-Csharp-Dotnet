@model LivrosEntity

@{
    ViewData["Title"] = "Create Book";
}

<h1>Create Book</h1>

<form asp-action="CreateBook" asp-controller="Library" method="post">
    <div class="form-group">
        <label asp-for="Id_Livro"></label>
        <input asp-for="Id_Livro" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Título"></label>
        <input asp-for="Título" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Autor"></label>
        <input asp-for="Autor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Preço"></label>
        <input asp-for="Preço" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Estoque"></label>
        <input asp-for="Estoque" class="form-control" />
    </div>

    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>

    <div class="card-footer">
        <center>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Library" class="btn btn-secondary">Voltar</a>
        </center>
    </div>

</form>
