@{
    ViewData["Title"] = "Livros Page";
}

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Library" class="btn btn-success">
            <i class="bi bi-plus"></i> Create Book
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Id do Livro</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                    <th>Ações</th> <!-- Adicionando uma coluna para as ações -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id_Livro</td>
                        <td>@item.Título</td>
                        <td>@item.Autor</td>
                        <td>@item.Preço</td>
                        <td>@item.Estoque</td>
                        <td>
                            <div class="btn-toolbar" role="toolbar">
                                <div class="btn-group me-2" role="group">
                                    <a asp-action="Delete" asp-controller="Library" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                                <div class="btn-group" role="group">
                                    <a asp-action="Update" asp-controller="Library" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i> Update
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
